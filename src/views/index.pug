
doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='x-ua-compatible' content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title #{title}
    link(href='//developer.ringcentral.com/assets/images/favicon.ico?v=20181214-0738', type='image/vnd.microsoft.icon', rel='shortcut icon')
    link(rel='stylesheet', href=server + '/css/rcpbs-faq.styles.bundle.css?' + version)
  body
    #container
    #content-loading(style='text-align:center;padding:30px;font-size:24px') loading...
    script.
      window.rc = !{JSON.stringify(_global)}

    script(crossorigin, src='https://unpkg.com/react@16/umd/react.production.min.js')
    script(crossorigin, src='https://unpkg.com/react-dom@16/umd/react-dom.production.min.js')
    script.
      window.rc.onload = function() {
        document.body.removeChild(document.getElementById('content-loading'));
      };
    script(src=server + '/js/rcpbs-olc.' + version + '.bundle.js', onload='window.rc.onload()')
